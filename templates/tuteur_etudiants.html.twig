<h2>Liste des étudiants</h2>

{% if etudiants is not empty %}
  <table border="1" cellpadding="6">
    <thead>
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Sujet</th>
      </tr>
    </thead>
    <tbody>
      {% for e in etudiants %}
        <tr>
          <td>{{ e.prenom }}</td>
          <td>{{ e.nom }}</td>
          <td>{{ e.sujet }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p>Aucun étudiant trouvé.</p>
{% endif %}
